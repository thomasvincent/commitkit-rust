# Google Style Guide EditorConfig
# https://google.github.io/styleguide/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
max_line_length = 100

[*.{toml,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
